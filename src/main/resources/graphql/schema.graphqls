type Query{
    recipeById(id : String) : Recipe
    allRecipes : [Recipe]
    recipesByCategory(category : String) : [Recipe]
    recipesFuzzySearch(title : String) : [Recipe]
    searchRecipesInFields(searchTerm :  String, fields : [String]) : [Recipe]
}

type Mutation{
    addRecipe(recipeInput : RecipeInput) : Recipe
    deleteRecipe(id : String) : String
}


type Recipe{
    id: String
    title: String
    description: String
    picture: String
    createdAt : String
    rating: Int
    category: Category
    ingredients: [Ingredient]
    instructions: [Instruction]
    user: User
}

type Instruction {
    id: String
    number: Int
    description: String
}

type Ingredient {
    id: String
    name: String
    description: String
}

type Category {
    id: Int
    name: String
}

type User {
    id: String
    firstName :String
    lastName : String
    email:String
    createdAt: String
}

input RecipeInput {
    id: String
    title: String
    description: String
    picture: String
    user: UserInput
    category: CategoryInput
    ingredients: [IngredientInput]
    instructions: [InstructionInput]
}
input InstructionInput {
    id: String
    number: Int
    description: String
}

input IngredientInput {
    id: String
    name: String
    description: String
}

input CategoryInput {
    id: Int
    name: String
}

input UserInput {
    id: String
    firstName :String
    lastName : String
    email:String
    createdAt: String
}
